<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Producciones Baby</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">

            <div class="collapse navbar-collapse bg-info" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active l"> @Html.ActionLink("Producciones Baby", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li class="nav-item active l">@Html.ActionLink("Eventos", "Index", "Events", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li class="nav-item active l">@Html.ActionLink("Ciudad", "Index", "Cities", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li class="nav-item active l">@Html.ActionLink("Acerca de", "About", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li class="nav-item active l">@Html.ActionLink("Contacto", "Contact", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Producciones  Baby</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
